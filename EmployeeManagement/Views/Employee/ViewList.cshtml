@using System.Web.Mvc.Html
@model IEnumerable<Helper.User>

@{
    ViewBag.Title = "List of Employees";
}

<style>
    .delete {
        border-color: transparent;
        background-color: transparent;
        color: #007bff;
        text-decoration: none;
        margin-left:0;
    }

    .delete:hover {
        text-decoration: underline;
        cursor: pointer;
    }
</style>
<h2 style="margin:10px;">List of Employees</h2>

<p>
    @Html.ActionLink("Create New", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateofJoining)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.UniqueEmpCode)
        </th>
        <th>
            Actions
        </th>

    </tr>

@foreach (var item in Model) {
    using (Html.BeginForm("Delete", "Employee", new { id = item.Id }))
    {
        <tr>
            <td>
                @Html.ActionLink(item.FullName, "Details", "Employee", new {id = item.Id },null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateofJoining, "{0:dd/MM/yyyy}")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UniqueEmpCode)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                <input class="delete" type="submit" onclick="return confirm('Are you sure you want to delete @item.FirstName');" value="Delete"/>
            </td>

        </tr>
     }
}

</table>
